<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_order_form_add_issues_link" model="ir.ui.view">
            <field name="name">sale.order.form.add.issues.link</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/h1" position="before">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_stat_button" icon="fa-star" type="object"  name="issues_open"
                            string="Issues"/>
                    </div>
                </xpath>
            </field>
        </record>
        <act_window name="Create issue"
            res_model="issue"
            src_model="sale.order"
            view_mode="form"
            target="current"
            key2="client_action_multi"
            id="action_create_issue"
            />

    </data>
</openerp>
