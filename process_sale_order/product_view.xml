<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Product form view. Add field min_unit -->
        <record id="product_template_form_view_add_min_unit" model="ir.ui.view">
            <field name="name">product_template_form_view_add_min_unit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <field name="uos_id" position="replace">
                    <field name="uos_id"/>
                    <field name="min_unit"/>
                </field>
                <field name="list_price" position="after">
                    <field name="box_discount"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
