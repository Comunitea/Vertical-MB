<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
        <!-- Ultrafresh purchase report -->
        <template id="ultrafresh_purchase_report">
        <style>
            .bordered{
                border: 1px solid black;
                border-collapse: collapse;
              }
        </style>
            <t t-call="report.external_layout">
                <div class="page">

                    <h1 align="center">ULTRAFRESH PURCHASE REPORT</h1>

                    <div class="row">
                        <div class="col-xs-1 bordered"><strong>Customer</strong></div>
                        <div class="col-xs-4 bordered"><strong>Name</strong></div>
                        <div class="col-xs-2 bordered"><strong>Order</strong></div>
                        <div class="col-xs-1 bordered"><strong>Quantity</strong></div>
                        <div class="col-xs-1 bordered"><strong>Unit</strong></div>
                        <div class="col-xs-2 bordered"><strong>Comment</strong></div>
                        <div class="col-xs-1 bordered"><strong>Purchased Qty</strong></div>
                    </div>
                    <t t-foreach="products" t-as="prod">
                        <div class="row">
                            <div class="col-xs-12">
                              <div class="col-xs-1"><span t-field="prod.default_code"/></div>
                              <div class="col-xs-3 "><span t-field="prod.name"/></div>
                              <div class="col-xs-3"><span t-field="prod.categ_id.name"/></div>
                            </div>

                              <t t-foreach="products[prod]" t-as="line">
                                  <div class="row">
                                      <div class="col-xs-12">
                                      <div class="col-xs-1 bordered">
                                          <span t-field="line.order_id.partner_id.ref"/>
                                      </div>
                                      <div class="col-xs-4 bordered">
                                         <span t-field="line.order_id.partner_id.name"/>
                                      </div>
                                      <div class="col-xs-2 bordered">
                                            <span t-field="line.order_id.name"/>
                                      </div>
                                      <div class="col-xs-1 bordered">
                                            <span t-field="line.product_uom_qty"/>
                                      </div>
                                      <div class="col-xs-1 bordered">
                                            <span t-field="line.product_uom.name"/>
                                      </div>
                                      <div class="col-xs-2 bordered">
                                            <span t-field="line.q_note"/>
                                      </div>
                                      <div class="col-xs-1 bordered">
                                    </div>
                                  </div>
                                  </div>
                              </t>
                          </div>
                    </t>
                </div>
            </t>
        </template>
    </data>
</openerp>
