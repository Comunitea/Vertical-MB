<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

      <record id="wizard_order_locations_view_form" model="ir.ui.view">
            <field name="name">wizard.order.locations.view.form</field>
            <field name="model">wizard.order.categories</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Order Products and Categories">
                  <p>
                        You can set the order of categories and inside each category the product order.<br/>
                        This wizard will generte a sequence number according to the specific order between categories and products.<br/>
                    </p>
                </form>
            </field>
        </record>

      <record id="action_order_categories" model="ir.actions.act_window">
          <field name="name">Order Products and Categories</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">wizard.order.categories</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
      </record>

      <menuitem name="Order Products and Categories" id="menu_wizard_order_categories" action="action_order_categories"
         parent="base.menu_product" sequence="109"/>


    </data>
</openerp>
