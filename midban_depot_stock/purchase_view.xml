<openerp>
    <data>
        <!-- Form View Purchase order: Adding boolean field to purchase order lines -->
        <record id="purchase_order_form_add_drop_code" model="ir.ui.view">
            <field name="name">purchase.order.form.add.drop.code</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="picking_type_id" position="after">
                    <field name="drop_code"/>
                </field>
            </field>
        </record>

    </data>
</openerp>