<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_stock_tag">
          <style type="text/css">
           .head span{
             font-size:11px;
           }
           .middle span{
             font-size:15px;
           }
           .middle strong{
             font-size:15px;
           }
           .content{
               position:relative;
               min-height:150mm;
               width:100mm;
               margin:0;
               padding:0;
               <!-- border:solid 1px; -->
           }
           .content .head{
               position:relative;
               height:30mm;
               margin:0;
               width:100mm;
              <!-- border:solid 1px; -->
           }
           .content .middle{
               position:relative;
               height: 50mm;
               width:100mm;
               <!-- border:solid 1px; -->
               margin:0;
           }
           .content .bottom{
               position:relative;
               height: 70mm;
               width:100mm;
               <!-- border:solid 1px; -->
               margin:0;
           }
         </style>
            <!-- <t t-call="report.html_container"> -->
                <t t-foreach="docs" t-as="o">
                   <!--  <t t-call="report.external_layout"> -->
                        <div class="page">
                            <div class="content">
                                <div class="head">
                                      <span t-field="o.company_id.partner_id.name"/><br/>
                                      <span t-field="o.company_id.partner_id.street"/><br/>
                                      <span t-field="o.company_id.partner_id.zip"/> - <span t-field="o.company_id.partner_id.city"/> - <span t-field="o.company_id.partner_id.state_id.name"/><br/>
                                      <span>TFNO.: </span><span t-field="o.company_id.partner_id.phone"/><br/>
                                      <span t-field="o.company_id.partner_id.website"/><br/>
                                </div>

                                 <div class="middle">
                                        <h2 t-esc="o.product_id.name"/>
                                      <p><strong>REF: </strong><span t-field="o.default_code"/></p>
                                      <p><strong>PACKAGE: </strong><span t-field="o.package_id"/></p>
                                      <p><strong>LOT:  </strong><span t-field="o.lot_id"/></p>
                                      <p><strong>EXPIRY DATE: </strong>  <span t-field="o.removal_date"/></p>
                                   </div>

                                    <div class="bottom text-center">
                                        <h2 t-esc="'PK' + (o.package_id and str(o.package_id.id) or '')"/>
                                        <img t-att-src="'data:image/png;base64,%s' % barcode('Code128','PK' + (o.package_id and str(o.package_id.id) or ''), 800, 300)" style="width:350px;height:150px"/>
                                        <h3 t-esc="o.package_id and o.package_id.location_id.name or False"/>
                                    </div>
                                  </div>
                        </div>
                    </t>
                <!--  </t> -->
             <!-- </t> -->
        </template>
    </data>
</openerp>
