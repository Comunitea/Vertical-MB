<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_stock_tag">
           <!--  <t t-call="report.html_container"> -->
                <t t-foreach="docs" t-as="o">
                   <!--  <t t-call="report.external_layout"> -->
                        <div class="page">
                            <div class="oe_structure"/>

                            <h1 align="center">Stock Tags</h1>
                             <div>
                                 <h3><strong>PRODUCT:  </strong><span t-field="o.product_id"/></h3>
                                 <h3><strong>REFERENCE:  </strong><span t-field="o.default_code"/></h3>
                                 <h3><strong>EAN 13: </strong><span t-field="o.ean13"/></h3>
                                 <h3><strong>PACKAGE: </strong><span t-field="o.package_id"/></h3>
                                 <h3><strong>ORDER:  </strong><span t-field="o.purchase_id"/></h3>
                                 <h3><strong>DATE ORDER: </strong> <span t-field="o.date_order"/></h3>
                                 <h3><strong>UNITS:  </strong><span t-field="o.num_units"/></h3>
                                 <h3><strong>BOXES:  </strong><span t-field="o.num_boxes"/></h3>
                                 <h3><strong>WEIGHT:  </strong><span t-field="o.weight"/></h3>
                                 <h3><strong>LOT:  </strong><span t-field="o.lot_id"/></h3>
                                 <h3><strong>EXPIRY DATE: </strong>  <span t-field="o.removal_date"/></h3>
                                 <h3><strong>BAR CODE: </strong> </h3>
                                    <div class="col-xs-12 mt32 text-center">
                                        <table class="table table-condensed" style="border-bottom: 3px solid black !important;"><thead><th> </th></thead></table>
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', (o.ean13 and o.ean13 or '') + ';' + (o.lot_id and o.lot_id.name or '') + ';' + (o.package_id and o.package_id.name or ''), 600, 100)" style="width:600px;height:100px"/>
                                        <p t-esc="(o.ean13 and o.ean13 or '') + ';' + (o.lot_id and o.lot_id.name or '') + ';' + (o.package_id and o.package_id.name or '')"></p>
                                    </div>
                             </div>
                        </div>
                    </t>
                <!--  </t> -->
            <!--  </t> -->
        </template>
    </data>
</openerp>
