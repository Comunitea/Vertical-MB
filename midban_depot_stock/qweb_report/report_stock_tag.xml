<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_stock_tag">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>

                            <h1 align="center">Stock Tags</h1>
                            <div t-if="o.type == 'box'">
                                 <h5><strong>TYPE:  </strong><span t-field="o.type"/></h5>
                                 <h5><strong>PRODUCT:  </strong><span t-field="o.product_id"/></h5>
                                 <h5><strong>REFERENCE:  </strong> <span t-field="o.default_code"/></h5>
                                 <h5><strong>EAN 13: </strong>  <span t-field="o.ean13"/></h5>
                                 <h5><strong>ORDER:  </strong><span t-field="o.purchase_id"/></h5>
                                 <h5><strong>DATE ORDER: </strong> <span t-field="o.date_order"/></h5>
                                 <h5><strong>UNITS:  </strong><span t-field="o.num_units"/></h5>
                                 <h5><strong>BOXES:  </strong><span t-field="o.num_boxes"/></h5>
                                 <h5><strong>WEIGHT:  </strong><span t-field="o.weight"/></h5>
                                 <h5><strong>LOT:  </strong><span t-field="o.lot_id"/></h5>
                                 <h5><strong>EXPIRY DATE: </strong>  <span t-field="o.removal_date"/></h5>
                             </div>

                             <div t-if="o.type == 'palet'">
                                 <h3><strong>TYPE:  </strong><span t-field="o.type"/></h3>
                                 <h3><strong>PRODUCT:  </strong><span t-field="o.product_id"/></h3>
                                 <h3><strong>REFERENCE:  </strong><span t-field="o.default_code"/></h3>
                                 <h3><strong>EAN 13: </strong><span t-field="o.ean13"/></h3>
                                 <h3><strong>ORDER:  </strong><span t-field="o.purchase_id"/></h3>
                                 <h3><strong>DATE ORDER: </strong> <span t-field="o.date_order"/></h3>
                                 <h3><strong>UNITS:  </strong><span t-field="o.num_units"/></h3>
                                 <h3><strong>BOXES:  </strong><span t-field="o.num_boxes"/></h3>
                                 <h3><strong>WEIGHT:  </strong><span t-field="o.weight"/></h3>
                                 <h3><strong>LOT:  </strong><span t-field="o.lot_id"/></h3>
                                 <h3><strong>EXPIRY DATE: </strong>  <span t-field="o.removal_date"/></h3>
                             </div>
                        </div>
                    </t>
                 </t>
             </t>
        </template>
    </data>
</openerp>
