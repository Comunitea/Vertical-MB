<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_purchase_preorder_promotion_form" model="ir.ui.view">
            <field name="name">purchase.preorder.form</field>
            <field name="model">purchase.preorder</field>
            <field name="inherit_id" ref="purchase_preorder.purchase_preorder_form"/>
             <field name="arch" type="xml">
                 <xpath expr="//form[@string='Products Supplier']/group/group/group[1]/field[@name='list_price']" position="after">
                    <field name="precentage_promo"/>
                    <field name="have_promotion"/>
                 </xpath>

                <page string="Consumptions" position="after">
                    <page string="Promotions">
                        <field name="product_promotions" readonly="1"  nolabel="1">
                            <tree string="promotions">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="discount"/>
                            </tree>
                        </field>
                    </page>
                </page>
              </field>
        </record>
    </data>
</openerp>
