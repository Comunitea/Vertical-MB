<!-- ************************************************* CUSTOMER DATA WIDGETS ************************************************ -->
<!-- ************************************************************************************************************************ -->
    
    <t t-name="Customer-Data-Widget">
        <div class="customer-data">
             <t   t-esc="widget.partner_name"/>
             <t   t-esc="widget.ref"/>
        </div>
    </t>

    <t t-name="Sust-Pop-Up-Screen-Widget">
        
        <div class="product-sust-pop-up">
            <div id="placeholder-sust-widget">
            </div>
            <div class="close-block">
                <div class="close-block-cell">
                    <button id="close-sust">Close</button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="Sustitute-Line-Widget">
        <tr>
            <td class="sust-cell-name">
                <span class="product-cell"><t t-esc="widget.product.name"/></span>
            </td>
            <td class="sust-cell-code">
                <span class="product-cell"><t t-esc="widget.product.default_code"/></span>
            </td>
            <td class="sust-cell-stock">
                <span class="product-cell"><t t-esc="widget.product.virtual_stock_conservative"/></span>
            </td>
            <td class="sust-cell-add">
                <button class="add-sustitute">add</button>
            </td>
        </tr>
    </t>

    <t t-name="Product-Sust-Widget">
        <div class="sust-widget-content">
            <table class="sustitute-table">
                <thead>
                    <th class="sust-header-name">Name</th>
                    <th class="sust-header-code">Code</th>
                    <th class="sust-header-stock">Stock</th>
                    <th class="sust-header-add">Add</th>
                </thead>
                <tbody class="sustitutelines">

                </tbody>
            </table>
        </div>
    </t>

    

</templates> 