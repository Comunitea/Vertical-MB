<?xml version="1.0" encoding="UTF-8"?>

 <templates id="template" xml:space="preserve">
    <t t-name="TsWidget">
        <div class="telesale">
            <input id="clearfocus" style="display:none"></input>
            <div id="topheader">

            </div>
            <div id="content">

            </div>
        </div>
    </t>

    <t t-name="HeaderButtonWidget">
        <div class="header-button">
            <t t-esc="widget.label" />
        </div>
    </t>

    <t t-name="ScreenButtonWidget">
        <div class="select-screen-buttons">
            <ol id="screen-list-buttons">
                <li class="screen-selector-button">
                    <!-- New Order -->
                    <button id="button1" class="select-screen"><t t-esc="widget.button1"/></button>
                </li>
                <li class="screen-selector-button">
                    <!-- Order History -->
                    <button id="button7" class="select-screen"><t t-esc="widget.button7"/></button>
                </li>
                 <li class="screen-selector-button">
                    <!-- Call List -->
                    <button id="button8" class="select-screen"><t t-esc="widget.button8"/></button>
                </li>
                <li class="screen-selector-button">
                    <!-- Product Catalog -->
                    <button id="button9" class="select-screen"><t t-esc="widget.button9"/></button>
                </li>
                 <li class="screen-selector-button">
                    <!-- Ptroduct Reserved -->
                    <button id="button3" class="select-screen"><t t-esc="widget.button3"/></button>
                </li>
                <li class="screen-selector-button">
                    <!-- Summary Orders -->
                    <button id="button2" class="select-screen"><t t-esc="widget.button2"/></button>
                </li>
               
            <!--     <li class="screen-selector-button">
                    <button id="button4" class="select-screen"><t t-esc="widget.button4"/></button>
                </li> -->
               <!--  <li class="screen-selector-button">
                    <button id="button5" class="select-screen"><t t-esc="widget.button5"/></button>
                </li> -->
                <!-- <li class="screen-selector-button">
                    <button id="button6" class="select-screen"><t t-esc="widget.button6"/></button>
                </li> -->
                
               
            </ol>
        </div>
    </t>

    <t t-name="New_Order_Buttons_Widget">
        <div class="select-screen-buttons">
            <ol id="screen-list-buttons">
                <li class="screen-selector-button">
                    <button id="button5" class="select-screen"><t t-esc="widget.button1"/></button>
                </li>
                <li class="screen-selector-button">
                    <button id="button6" class="select-screen"><t t-esc="widget.button5"/></button>
                </li>
                <li class="screen-selector-button">
                    <button id="button7" class="select-screen"><t t-esc="widget.button2"/></button>
                </li>
                <li class="screen-selector-button">
                    <button id="button8" class="select-screen"><t t-esc="widget.button3"/></button>
                </li>
                <li class="screen-selector-button">
                    <button id="button9" class="select-screen"><t t-esc="widget.button4"/></button>
                </li>
            </ol>
        </div>
    </t>

    <t t-name="Order-line-Widget">
        <tr>
             <td class="cell-nline">
                <!-- <span class='col-nline'> <t t-esc="widget.model.get('n_line')"/> </span> -->
                <input type="text" class='col-nline' t-att-value="widget.model.get('n_line')" readonly="readonly" tabIndex="-1"/>
            </td>
            <td class="cell-code">
                <input type="text" class='col-code mandatory' t-att-value="widget.model.get('code')"/>
            </td>
             <td class="cell-product">
                <input type="search" class='col-product mandatory' t-att-value="widget.model.get('product')"/>
            </td>
             <td class="cell-unit">
                <input type="text" class='col-unit mandatory' t-att-value="widget.model.get('unit')"/>
            </td>
             <td class="cell-qty">
                <input type="text" class='col-qty mandatory' t-att-value="widget.model.get('qty').toFixed(2)"/>
            </td>
             <td class="cell-pvp">
                <input type="text" class='col-pvp mandatory' t-att-value="widget.model.get('pvp').toFixed(2)"/>
            </td>
             <td class="cell-total">
                <input type="text" class='col-total' t-att-value="widget.model.get('total').toFixed(2)" readonly="readonly" tabIndex="-1"/>
            </td>
            <td class="cell-temp">
                <input type="text" class='col-temp' t-att-value="widget.model.get('temperature')" readonly="readonly" tabIndex="-1"/>
            </td>

        </tr>
    </t>

    <t t-name="Order-Widget">
        <header class="button-order-container">
            <div class="functional-buttons">
                <button class="add-line-button">Add</button>
                <button class="remove-line-button">Remove</button>
                <button id="ult-button">ULT</button>
                <button id="vum-button">VUM</button>
                <button id="via-button">VIA</button>
                <button id="promo-button">PROMO</button>
                <button id="sust-button">SUST</button>
                <button id="info-button">INFO</button>
                <button id="show-client">SHOW CUSTOMER</button>
            </div>
            <!-- <span class="span-state">State Order:  <t t-esc="widget.ts_model.get('selectedOrder').get('state')"/> -->
            <span class="span-state">State Order:
            <t t-if="widget.ts_model.get('selectedOrder').get('state') == 'new'">
                New
            </t>
            <t t-if="widget.ts_model.get('selectedOrder').get('state') == 'progress'">
                Confirmed
            </t>
            <t t-if="widget.ts_model.get('selectedOrder').get('state') == 'draft'">
                Draft
            </t>
            <t t-if="widget.ts_model.get('selectedOrder').get('state') == 'cancel'">
                Canceled
            </t>
            </span>
        </header>
        <div class="order-container">
            <table class="order-line-table">
                <thead>
                    <th class="header-nline">Nº</th>
                    <th class="header-code">Code</th>
                    <th class="header-product">Product</th>
                    <th class="header-unit">Unit</th>
                    <th class="header-qty">Qty</th>
                    <th class="header-pvp">PVP</th>
                    <th class="header-total">Total</th>
                    <th class="header-temp">Tmp ºC</th>
                </thead>
                <tbody class="orderlines">

                </tbody>
            </table>
        </div>
    </t>

    <t t-name="Data-Order-Widget">
        <div id="toppart">
            <div class="toppart-form">
                <div class="form-col">
                    <label for="customer">Customer:</label>
                    <input class="mandatory" type="text" id="partner" name="customer" t-att-value="widget.order_model.get('partner')"/>
                    <br/>
                    <br/>
                    <label for="num_order">Nº order:</label>
                    <input type="text" id='num_order' name="num_order" t-att-value="widget.order_model.get('num_order')" readonly="readonly" tabIndex="-1"/>
                    
                </div>
                <div class="form-col">
                     <label for="code">Customer code:</label>
                    <input class="mandatory" type="text" id='partner_code' name="code" t-att-value="widget.order_model.get('partner_code')"/>
                    <br/>
                    <br/>
                    <label for="contact_name">Contact Name:</label>
                    <input type="text" id='contact_name' name="contact_name" t-att-value="widget.order_model.get('contact_name')" readonly="readonly" tabIndex="-1"/>
                    
                </div>
                <div class="form-col">
                    <label for="date_invoice">Date invoice:</label>
                    <input  class="mandatory" type="date" id='date_invoice' name="date_invoice" t-att-value="widget.order_model.get('date_invoice')"/>
                    <br/>
                    <br/>
                    <label for="limit_credit">Limit Credit:</label>
                    <input type="numeric" id='limit_credit' name="limit_credit"
                        t-att-value="widget.order_model.get('limit_credit').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                </div>
                <div class="form-col">
                    <label for="date_order">Date Order:</label>
                    <input type="text" id='date_order' name="date_order" t-att-value="widget.ts_model.localFormatDate(widget.order_model.get('date_order'))" readonly="readonly" tabIndex="-1"/>
                    <br/>
                    <br/>
                    <label for="customer_debt">Customer Debt:</label>
                    <input type="numeric" id='customer_debt' name="customer_debt"
                        t-att-value="widget.order_model.get('customer_debt').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                </div>
                <div class="form-col">
                    <label for="comercial">Comercial:</label>
                    <input type="text" id='comercial' name="comercial" t-att-value="widget.order_model.get('comercial')" readonly="readonly" tabIndex="-1"/>
                    <br/>
                    <br/>
                    <label for="coment">Notes:</label>
                    <input type="text" id='coment' name="coment" t-att-value="widget.order_model.get('coment')"/>
                </div>
            </div>
        </div>widget.ts_model.localFormatDate(widget.order.date_order)
    </t>

    <t t-name="Totals-Order-Widget">
        <div id="bottompart">
            <div class="bottompart-form">
                <div class="form-col">
                    
                        <label for="total_boxes">Total Boxes:</label>
                        <input type="text" id='total_boxes' name="total_boxes"
                            t-att-value="widget.order_model.get('total_boxes').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                        <br/>
                        <br/>
                    
                        <label for="total_weight">Total Weight:</label>
                        <input type="numeric" id='total_weight' name="total_weight"
                            t-att-value="widget.order_model.get('total_weight').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                        <br/>
                        <br/>
                    
                        <label for="total_base">Total Base:</label>
                        <input type="text" id='total_base' name="total_base" 
                            t-att-value="widget.order_model.get('total_base').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                </div>
                <div class="form-col">
                        
                        <label for="total_discount">Discount:</label>
                        <input type="numeric" id='total_discount' name="total_discount" 
                            t-att-value="widget.order_model.get('total_discount').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                        <br/>
                        <br/>
                    
                        <label for="total_margin">Total Margin:</label>
                        <input type="numeric" t-att-value="widget.order_model.get('total_margin').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                        <br/>
                        <br/>
                        <label for="total_iva">Total Iva:</label>
                        <input type="numeric" id='total_iva' name="total_discount" 
                            t-att-value="widget.order_model.get('total_iva').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                </div>
                <div class="form-col">
                        
                        <label for="total">Discount (%):</label>
                        <input type="text" class='total' name="discount_total" 
                            t-att-value="widget.order_model.get('total_discount').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                    
                        <br/>
                        <br/>
                        <label for="total">Margin (%):</label>
                        <input type="text" class='total' id='total_margin' 
                            t-att-value="widget.order_model.get('total_margin').toFixed(2)" readonly="readonly" tabIndex="-1"/>
                        
                        <br/>
                        <br/>
                        <label for="total">Total Order:</label>
                        <input type="text" class='total' id="total_order" 
                            t-att-value="widget.order_model.get('total').toFixed(2)" tabIndex="-1" readonly="readonly"/>
                        <label for="total">Total Fresh:</label>
                        <input type="text" class='total' id="total_fresh" 
                            t-att-value="widget.order_model.get('total_fresh').toFixed(2)" tabIndex="-1" readonly="readonly"/>
                        
                </div>
                <div class="form-col">
                    <button class="save-button">SAVE</button>
                    <button class="cancel-button">CANCEL</button>
                    <button class="confirm-button">CONFIRM</button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductInfo-Order-Widget">
        <div id="rightpart">
            <table >
                <tr>
                    <th scope="row">Stock Product</th>
                    <td><t t-esc="widget.stock"/></td>

                </tr>
                <tr>
                    <th scope="row">Last Date</th>
                    <td><t t-esc="widget.date"/></td>
                </tr>
                <tr>
                    <th scope="row">Last Quantity</th>
                    <td><t t-esc="widget.qty"/></td>
                </tr>
                <tr>
                    <th scope="row">Last Price</th>
                    <td><t t-esc="widget.price"/></td>
                </tr>
                <tr>
                    <th scope="row">Mark</th>
                    <td><t t-esc="widget.mark"/></td>
                </tr>
                <tr>
                    <th scope="row">Class</th>

                    <td>
                    <t t-if="widget.class == 'fresh'">
                        Fresh
                    </t>
                    <t t-if="widget.class == 'dry'">
                        Dry
                    </t>
                    <t t-if="widget.class == 'frozen'">
                        Frozen
                    </t>
                    <t t-if="widget.class == 'chilled'">
                        Chilled
                    </t>
                    <t t-if="widget.class == 'no_class'">
                        No Class
                    </t>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Weight Unit</th>
                    <td><t t-esc="widget.unit_weight"/></td>
                </tr>
                <tr>
                    <th scope="row">Minimum Price</th>
                    <td><t t-esc="widget.min_price"/></td>
                </tr>
                <tr>
                    <th scope="row">Product Margin</th>
                    <td><t t-esc="widget.margin"/></td>
                </tr>
                <tr>
                    <th scope="row">Discount</th>
                    <td><t t-esc="widget.discount"/></td>
                </tr>
                <tr>
                    <th scope="row">Line Number</th>
                    <td><t t-esc="widget.n_line"/></td>
                </tr>
            </table>
        </div>
    </t>
<!-- ********************************************** SCREENS ***************************************************************** -->
    <t t-name="Order-Screen-Widget">
        <div class="order-screen-content">
            <div id="pagespart">
                <div id="order-selector">
                    <button class="neworder-button">+</button>
                    <button class="removeorder-button">-</button>
                    <ol id="orders"></ol>
                </div>
            </div>
            <div id="placeholder-toppart">
            </div>
            <div id="leftpart">
                <div id="placeholder-order-widget">
                </div>

            </div>
            <div id="placeholder-rightpart">
            </div>
            <div id="placeholder-bottompart">
            </div>
        </div>
    </t>

    <t t-name="Tele-Analysis-Screen-Widget">
        <div class="tele-analysis-content">
            <h1>Telemarket Analysis content</h1>
        </div>
    </t>


<!-- ********************************************** BUTTONS ***************************************************************** -->
   


    <t t-name="Order-Button-Widget">
        <li class="order-selector-button">
            <button class="select-order"><t t-esc="(widget.order.get('partner') ? widget.order.get('partner')+' - ':'') + widget.order.get('creationDate').toString('t')"/></button>
        </li>
    </t>

    <t t-name="Synch-Notification-Widget">
        <t t-if="widget.get_nbr_pending() > 0">
            <div class="oe_ts_synch-notification">
                <t   t-esc="widget.get_nbr_pending()"/>
                <div class="oe_status_red"></div>
            </div>
        </t>
        <t t-if="widget.get_nbr_pending() === 0">
            <div class="oe_ts_synch-notification oe_inactive">
                <div class="oe_status_green"></div>
            </div>
        </t>
    </t>



