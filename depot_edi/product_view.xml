<openerp>
    <data>
        <!-- Product uom form view add code field -->
        <record id="product_uom_code_form" model="ir.ui.view">
            <field name="name">product.uom.code.form</field>
            <field name="model">product.uom</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_uom_form_view" />
            <field name="arch" type="xml">
                <field name="rounding" position="after">
                    <field name="code"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
