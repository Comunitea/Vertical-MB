<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="purchase_edi_form" model="ir.ui.view">
        <field name="name">purchase.edi.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <button name="wkf_send_rfq" position="after">
                <button name="export_edi" string="Generate EDI" type="object"/>
            </button>
            <!-- <button name="wkf_send_rfq" position="replace">
                <button name="wkf_send_rfq" states="approved" string="Send by Email" type="object" context="{'send_rfq':True}"/>
            </button> -->
            <notebook position="inside">
                <page string="EDI">
                    <group>
                        <group>
                            <field name="name_doc"/>
                            <field name="file_name_doc"/>
                            <field name="date_doc"/>
                        </group>
                        <group>
                            <field name="state_doc"/>
                            <field name="date_process_doc"/>
                        </group>
                        <newline/>
                        <label string="XML file" colspan="4"/>
                        <field name="message" colspan="4" readonly="1" select="2" nolabel="1"/>

                    </group>
                </page>
             </notebook>
        </field>
    </record>


  
</data>
</openerp>
